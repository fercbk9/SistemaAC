@model IEnumerable<SistemaAC.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Categorias</h2>

<p>
    <a data-toggle="modal" data-target="#modalAgregarCategoria" class="btn btn-primary">Agregar Categoria</a>
</p>
<div class="form-group">
    <div class="col-md-8">
        <input id="filtrar" name="filtrar" placeholder="Buscar" onkeyup="filtrarDatos(1,'nombre');" class="form-control" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a href="#" onclick="filtrarDatos(1,'nombre')">Nombre</a>
            </th>
            <th>
                <a href="#" onclick="filtrarDatos(1,'descripcion')">Descripcion</a>
            </th>
            <th>
                <a href="#" onclick="filtrarDatos(1,'estado')">Estado</a>
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id="resultSearch"></tbody>
</table>
<div id="paginado">

</div>



<div class="modal fade" id="modalAgregarCategoria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="Nombre" class="control-label">Nombre</label>
                        <input name="Nombre" id="Nombre" class="form-control" placeholder="Nombre" />
                    </div>
                    <div class="form-group">
                        <label for="Descripcion" class="control-label">Descripcion</label>
                        <input name="Descripcion" id="Descripcion" class="form-control" placeholder="Descripcion" />
                    </div>
                    <div class="form-group">
                        <label for="Estado" class="control-label">Estado</label>
                        <select id="Estado" name="Estado">
                            <option value="0">Seleccione Estado</option>
                            <option value="true">Activo</option>
                            <option value="false">No Activo</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p id="mensajeCat"></p>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="agregarCategoria()">Agregar Categoria</button>
            </div>
        </div>
    </div>
</div>
@* Modal Estado *@
<div class="modal fade" id="ModalEstado" tabindex="-1" role="dialog" aria-labelledby="titleEstado" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleEstado">Cambiar Estado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="editarCategoria()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
